#!/bin/bash

set -e

topd=$(pwd)
tstamp=$(date +%Y-%m-%d_%H-%M-%S)
rnd=$RANDOM
wkdir="${topd}/work-${tstamp}-${rnd}"
ddir="${topd}/data"
sdir="${topd}/src"
hdir="/root"

docker run -v ${ddir}:${hdir}/data:ro \
       -v ${sdir}:${hdir}/src:ro \
       -v ${wkdir}:${hdir}/work \
       eamon/2015pedv:v0.1 /bin/bash -c "cd /root/work && make -f /root/src/Makefile"

echo "Currently, $wdir and its contents are always owned by root, so you might want to"
user=$(id -u)
group=$(id -g)
echo "     sudo chown -hR ${user}:${group} $wkdir "
